<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo_gui.DeleteMovieController">

    <Label text="Введите ID фильма, который необходимо удалить" />
    <TextField fx:id="idTextField" />

    <Button text="Удалить" onAction="#deleteMovie" />
    <Button text="Отмена" onAction="#cancel" />
</VBox>